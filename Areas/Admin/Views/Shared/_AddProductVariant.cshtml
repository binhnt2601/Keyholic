
<div class="modal fade" id="ProductVariant" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm Phân loại Sản phẩm</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formVariant">
                    <div>
                        <div class="form-group">
                            <label for="AddVariant" class="control-label">Phân loại: </label>
                            <input id="AddVariant" class="form-control" type='text' required placeholder='Phân loại' />
                        </div>
                        <div class="form-group">
                            <label for="AddOriginalPrice" class="control-label">Giá gốc: </label>
                            <input id="AddOriginalPrice" class="form-control" type='number' min='0' placeholder='Giá (đ)' />
                        </div>
                        <div class="form-group">
                            <label for="AddCurrentPrice" class="control-label">Giá hiện tại: </label>
                            <input id="AddCurrentPrice" class="form-control" type='number' min='0' placeholder='Giá (đ)' />
                        </div>
                        <div class="form-group">
                            <label for="AddQuantity" class="control-label">Số lượng: </label>
                            <input id="AddQuantity" class="form-control" type='number' min='0' value='0' />
                        </div>
                        <div class="form-group">
                            <label for="imgSrc" class="control-label">Ảnh: </label>
                            <a id="btnAddVariantImage">
                                <span>
                                    <i class='fa fa-plus'></i>
                                </span>
                            </a>
                            <div>
                                <img id="AddVariantImgSrc" src="" width="100px" height="auto">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                            <button type="button" data-dismiss="modal" class="btn btn-primary" id="addVariant">Lưu</button>
                        </div>
                    </div>
                </form>
                
            </div>
            
        </div>
        
    </div>
</div>


